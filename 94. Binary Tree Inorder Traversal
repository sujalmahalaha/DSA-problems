class Solution {
public:
    vector<int> inorderTraversal(TreeNode* root) {
        vector<int> ans; 
        TreeNode* curr=root;
        while(curr){
            if(!curr->left){
                ans.push_back(curr->val);
                curr=curr->right;
            }
            else{
                TreeNode* pred=curr->left;
                while(pred->right!=curr&&pred->right)
                    pred=pred->right;
                if(pred->right==nullptr){
                    pred->right=curr;
                    curr=curr->left;
                }
                else{
                    ans.push_back(curr->val);
                    pred->right=nullptr;
                    curr=curr->right;
                }
            }
        }
        return ans;
    }
};
